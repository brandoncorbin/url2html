{
  "name": "url2html",
  "version": "1.1.0",
  "description": "Takes a URL and returns a HTML representation - includes youtube, vimeo, images, mp3...",
  "main": "lib/index.js",
  "scripts": {
    "lint": "run-p lint-*",
    "lint-src": "eslint src --fix",
    "lint-tests": "eslint __tests__ --fix",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e",
    "babel": "babel src -d lib -s",
    "build": "rimraf lib && npm run babel && npm run webpack",
    "jest": "jest",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prepublishOnly": "npm run build",
    "test": "npm run lint && npm run jest",
    "release:patch": "npm run test && npm-bump patch",
    "release:minor": "npm run test && npm-bump minor",
    "release:major": "npm run test && npm-bump major",
    "webpack": "webpack"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^3.1.3",
    "@commitlint/config-angular": "^3.1.1",
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.5.0",
    "eslint-config-noamokman": "^6.0.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "npm-run-all": "^4.1.0",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "notify": true,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ]
  },
  "dependencies": {
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2016": "6.24.1",
    "npm-bump": "0.0.23",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3"
  }
}
